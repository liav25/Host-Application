<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

>

    <android.support.v7.widget.CardView
        android:id="@+id/meal_card"
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:outlineAmbientShadowColor="#c1c1c1"
        android:outlineSpotShadowColor="#c1c1c1"
        android:focusable="true"
        android:paddingTop="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:contentPaddingBottom="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fcfcfc"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:autoSizeMaxTextSize="36dp"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:text="@string/this_is_card_title"
                android:textAllCaps="true"
                android:textColor="@color/TextYellow"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="2"
                android:paddingLeft="20dp"
                android:scrollHorizontally="true"
                android:text="This is meal date bla bla bla..."
                android:textColor="#7c7c7c"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="2"
                android:paddingLeft="20dp"
                android:scrollHorizontally="true"
                android:text="This is meal description bla bla bla..."
                android:textColor="#777777"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:text="Host"
                android:textColor="#42A5F5"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/meal_card"
            android:layout_alignTop="@+id/meal_card">


            <FrameLayout
                android:id="@+id/frames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/JoinButton"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/student1"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:src="@drawable/profile_picture"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="1dp"

                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/student2"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="35dip"
                    android:src="@drawable/profile_picture"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="1dp"

                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/student3"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="70dip"
                    android:src="@drawable/profile_picture"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="1dp"

                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/student4"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="105dip"
                    android:src="@drawable/profile_picture"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="1dp"

                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/student5"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="140dip"
                    android:src="@drawable/profile_picture"
                    app:civ_border_color="#ffffff"

                    app:civ_border_width="1dp" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/see_more_in_card"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="175dip"
                    android:src="@drawable/see_more_users"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="1dp"

                    />


            </FrameLayout>

            <Button
                android:id="@+id/JoinButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_button"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/join_meal"
                android:textColor="@color/TextWhite"
                android:textSize="20sp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>