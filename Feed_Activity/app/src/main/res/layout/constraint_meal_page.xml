<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/meal_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/TextYellow">
    </android.support.v7.widget.Toolbar>

    <!--TODO: define @string/mealPhoto-->
    <!--TBD: Should we show a photo if we don't support uploads yet?-->
    <!--android:contentDescription="" -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/meal_toolbar"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:background="@drawable/meal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cover"
            android:orientation="vertical">

            <RelativeLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="207dp"
        android:layout_height="64dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:text="Italian Dinner"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"
        android:textStyle="bold" />


                <ImageButton
                    android:id="@+id/pencil_meal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="#00FFFFFF"
                    app:srcCompat="@drawable/edit_pen_grey" />
</RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/mealPageDateTime"
                    android:layout_width="192dp"
                    android:layout_height="45dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:text="11/1/2011 , 20:00"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="38dp"
                        android:layout_height="44dp"
                        app:srcCompat="@drawable/location_pink_profile" />

                    <TextView
                        android:id="@+id/mealFoodRestrictions2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Nachla'aot"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                </LinearLayout>

                <!--TODO: android:text="@string/meal_date"-->
            </RelativeLayout>


            <TextView
                android:id="@+id/MealHostName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Host:"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/mealFoodRestrictions6"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:padding="5dp">

            </android.support.v7.widget.RecyclerView>


            <TextView
                android:id="@+id/mealFoodRestrictions"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="4dp"
                android:text="Food Restrictions: Vegan, Kosher"
                android:textSize="18sp"
                app:layout_constraintVertical_bias="0.649" />


            <TextView
                android:id="@+id/mealFoodRestrictions7"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text="Free text description will come here "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/still_needed"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Still Needed: "
                android:textStyle="bold"
                android:textSize="14sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <TextView
                android:id="@+id/bringing1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Bringing: "
                android:textStyle="bold"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/namebring1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="Bringing: "
                android:textStyle="bold"
                android:textSize="14dp" />

    <TextView
        android:id="@+id/bringing2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Bringing: "
        android:textStyle="bold"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/namebring2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="Bringing: "
        android:textStyle="bold"
        android:textSize="14dp" />
</LinearLayout>


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:clickable="true"
                android:drawablePadding="10dp"
                android:focusable="true"
                android:includeFontPadding="true"
                android:inputType="textCapSentences"
                android:text="Join Meal !"
                android:textColor="@color/TextWhite"
                android:textSize="15sp" />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>