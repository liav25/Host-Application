<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    tools:context=".Profile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/relate"
        android:layout_width="match_parent"
        android:layout_height="340dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/TextYellow"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="53dp"
                android:layout_height="54dp"
                android:background="@drawable/edit_button_profile"
                android:textColor="#EB723A3A"
                android:visibility="visible"
                tools:layout_conversion_absoluteHeight="66dp"
                tools:layout_conversion_absoluteWidth="66dp"
                tools:layout_editor_absoluteX="351dp"
                tools:layout_editor_absoluteY="7dp" />

            <ImageView

                android:id="@+id/profilepic"
                android:layout_width="127dp"
                android:layout_height="144dp"
                android:src="@drawable/profile_picture"
                tools:layout_conversion_absoluteHeight="198dp"
                tools:layout_conversion_absoluteWidth="165dp"
                tools:layout_editor_absoluteX="142dp"
                tools:layout_editor_absoluteY="70dp" />

            <TextView
                android:id="@+id/name_of_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ofek Israel"
                android:textColor="@color/cardview_light_background"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/profilepic"
                tools:layout_conversion_absoluteHeight="30dp"
                tools:layout_conversion_absoluteWidth="107dp"
                tools:layout_editor_absoluteX="152dp" />

        </android.support.constraint.ConstraintLayout>
        <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="400dp"-->
        <!--android:layout_height="120dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="275dp">-->
        <!--</android.support.v7.widget.CardView>-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:text="@string/textualDescriptionProfile"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/university_pink_profile" />

        <TextView
            android:id="@+id/uni_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="@string/universityProfile" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/location_pink_profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="@string/cityProfile" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingStart="25dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/languages_pink_profile" />

        <TextView
            android:id="@+id/profile_langs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="@string/languagesProfile" />
    </LinearLayout>
</LinearLayout>