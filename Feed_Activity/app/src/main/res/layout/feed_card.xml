<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Meal_Card">

    <android.support.v7.widget.CardView
        android:id="@+id/meal_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/BackgroundPink"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:contentPaddingBottom="5dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingRight="10dp"
        app:contentPaddingTop="5dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:autoSizeMaxTextSize="36dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:shadowColor="#c4c4c4c4"
                android:shadowRadius="2.0"
                android:text="@string/this_is_card_title"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/TextYellow"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="2"
                android:scrollHorizontally="true"
                android:text="This is meal date bla bla bla..."
                android:textColor="@color/TextGrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/card_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="2"
                android:scrollHorizontally="true"
                android:text="This is meal description bla bla bla..."
                android:textColor="#777777"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"

                    android:textColor="#42A5F5"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/JoinButton"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:background="@color/colorAccent"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:padding="10dp"
                    tools:text="@string/JoinMealButton"
                    tools:textColor="@color/TextWhite"
                     />


            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>