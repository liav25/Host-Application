<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/rounded_button_orange"
    android:backgroundTint="#fcfcfc"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="10dp"
    tools:context=".HowWasItPop">




        <Button
            android:id="@+id/closeRevPopUpButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sharp_close_24px"
            android:clickable="true"
            android:focusable="true" />


        <TextView
            android:id="@+id/show_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:text="Show USERNAME some love!"
            android:textSize="20dp" />


<LinearLayout
    android:layout_centerHorizontal="true"
    android:layout_below="@id/show_love"
    android:layout_width="290dp"
    android:layout_height="100dp">


    <ImageButton
        android:id="@+id/pepper5"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/pepper5"
        android:alpha="0.3"

        android:clickable="true"
        android:focusable="true" />


    <ImageButton
        android:id="@+id/pepper4"
        android:layout_width="40dp"
        android:layout_margin="10dp"
        android:alpha="0.3"

        android:layout_height="60dp"
        android:background="@drawable/pepper4"
        android:clickable="true"
        android:focusable="true" />




    <ImageButton
        android:id="@+id/pepper3"
        android:layout_width="40dp"

        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:alpha="0.3"
        android:background="@drawable/pepper3"
        android:clickable="true"
        android:focusable="true" />


    <ImageButton
        android:id="@+id/pepper2"
        android:layout_width="40dp"
        android:alpha="0.3"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/pepper2"
        android:clickable="true"
        android:focusable="true" />


    <ImageButton
        android:id="@+id/pepper1"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:alpha="0.3"
        android:background="@drawable/pepper1"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>

    <Button
        android:id="@+id/submitRankButton"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:background="@color/TextYellow"
        android:clickable="true"

        android:focusable="true"
        android:layout_centerHorizontal="true"
        android:text="Submit your feedback"
        android:textColor="@color/TextWhite"
        android:layout_marginStart="30dp" />

    <!--// show clicking indication-->

</RelativeLayout>