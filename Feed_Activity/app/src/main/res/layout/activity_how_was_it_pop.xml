<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/rounded_button_orange"
    android:backgroundTint="#fcfcfc"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="10dp"
    tools:context=".HowWasItPop">




        <Button
            android:id="@+id/closeRevPopUpButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sharp_close_24px"
            android:clickable="true"
            android:focusable="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/profile_pic_how_was"
        android:layout_below="@+id/closeRevPopUpButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/profile_picture"/>

    <LinearLayout
        android:id="@+id/show_love"
        android:layout_below="@+id/profile_pic_how_was"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Show "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/username_text_how_was"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=" "
            android:textSize="20dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=" Some Love !"
            android:textSize="20dp" />


    </LinearLayout>

<LinearLayout
    android:id="@+id/peppers_layout"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/show_love"
    android:layout_width="290dp"
    android:layout_height="wrap_content">


    <ImageButton
        android:id="@+id/pepper1"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:alpha="0.3"
        android:background="@drawable/pepper1"
        android:clickable="true"
        android:focusable="true" />


    <ImageButton
        android:id="@+id/pepper2"
        android:layout_width="40dp"
        android:alpha="0.3"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/pepper2"
        android:clickable="true"
        android:focusable="true" />




    <ImageButton
        android:id="@+id/pepper3"
        android:layout_width="40dp"

        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:alpha="0.3"
        android:background="@drawable/pepper3"
        android:clickable="true"
        android:focusable="true" />

    <ImageButton
        android:id="@+id/pepper4"
        android:layout_width="40dp"
        android:layout_margin="10dp"
        android:alpha="0.3"

        android:layout_height="60dp"
        android:background="@drawable/pepper4"
        android:clickable="true"
        android:focusable="true" />




    <ImageButton
        android:id="@+id/pepper5"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/pepper5"
        android:alpha="0.3"

        android:clickable="true"
        android:focusable="true" />

</LinearLayout>

    <Button
        android:id="@+id/submitRankButton"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@color/TextYellow"
        android:clickable="true"
        android:layout_below="@+id/peppers_layout"
        android:focusable="true"
        android:layout_centerHorizontal="true"
        android:text="Submit your feedback"
        android:textColor="@color/TextWhite"
     />

    <!--// show clicking indication-->

</RelativeLayout>