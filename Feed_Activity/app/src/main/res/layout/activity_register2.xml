<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical">
    <!--tools:context=".ProfileActivity">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/TextYellow"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/spice" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="180dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="EMAIL"
                android:textColor="@color/TextWhite"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="210dp">

            <EditText
                android:id="@+id/insertEmailSU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter your email"
                android:inputType="text"
                app:layout_constraintVertical_bias="0.6"
                tools:layout_editor_absoluteX="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="280dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="USERNAME"
                android:textColor="@color/TextWhite"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp">

            <EditText
                android:id="@+id/insertUserNameSU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Choose a username"
                android:inputType="textPassword"
                app:layout_constraintVertical_bias="0.6"
                tools:layout_editor_absoluteX="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="380dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="PASSWORD"
                android:textColor="@color/TextWhite"
                android:textSize="24sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp">

            <EditText
                android:id="@+id/insertPasswordSU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                app:layout_constraintVertical_bias="0.6"
                tools:layout_editor_absoluteX="16dp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="460dp"
            android:gravity="center">

            <!--<Button-->
            <!--android:id="@+id/loginButton"-->
            <!--android:layout_width="194dp"-->
            <!--android:layout_height="60dp"-->


            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_marginStart="98dp"-->
            <!--android:layout_marginLeft="98dp"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:layout_marginEnd="97dp"-->
            <!--android:layout_marginRight="100dp"-->
            <!--android:layout_marginBottom="53dp"-->
            <!--android:background="#1DEF3E3E"-->
            <!--android:clickable="true"-->
            <!--android:focusable="true"-->
            <!--android:text="SIGN UP"-->
            <!--android:textColor="@color/TextWhite"-->
            <!--android:textSize="18sp"-->
            <!--app:layout_constraintVertical_bias="0.379" />-->


            <Button
                android:id="@+id/signUpButton"
                android:layout_width="194dp"
                android:layout_height="60dp"

                android:layout_above="@+id/loginButton"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="96dp"
                android:layout_marginLeft="98dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="96dp"
                android:layout_marginRight="92dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:clickable="true"
                android:focusable="true"
                android:text="SIGN UP"
                android:textColor="@color/TextWhite"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/loginButtonInSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="175dp"
                android:layout_marginTop="80dp"
                android:text="Login"
                android:textColor="@color/colorAccent"
                android:textSize="22sp"
                android:clickable="true"
                android:textStyle="bold"
                android:focusable="true"
                android:paddingStart="175dp" />


            app:layout_constraintVertical_bias="0.379" />

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>