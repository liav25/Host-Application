<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4e321"
    android:orientation="vertical">

            <ImageView
                android:id="@+id/hoster_logo"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="100dp"
                android:elevation="5dp"
                android:outlineProvider="none"

                android:src="@drawable/spice" />

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/hoster_logo"
        android:elevation="1dp"
        android:outlineProvider="none"
        android:padding="30dp"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:text="E-Mail"
            android:fontFamily="@font/cairo_light"
            android:textColor="@color/AccentRed"
            android:textSize="16sp"
            android:textStyle="bold" />

            <EditText
                android:id="@+id/insertEmailSU"
                android:layout_below="@id/email_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="-15dp"
                android:fontFamily="@font/open_sans"
                android:hint="user@mail.com"
                android:inputType="textEmailAddress"
                app:layout_constraintVertical_bias="0.6"
                tools:layout_editor_absoluteX="16dp" />




            <TextView
                android:id="@+id/name_text"
                android:layout_below="@id/insertEmailSU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Name"
                android:layout_marginTop="10dp"
                android:paddingLeft="3dp"
                android:fontFamily="@font/cairo_light"
                android:textColor="@color/AccentRed"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:layout_below="@id/name_text"
                android:id="@+id/insertUserNameSU"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="-15dp"
                android:hint="John Doe"
                android:fontFamily="@font/open_sans"
                android:inputType="textCapWords"
                app:layout_constraintVertical_bias="0.6"
                tools:layout_editor_absoluteX="16dp" />


        <TextView
            android:id="@+id/password_text"
            android:layout_below="@id/insertUserNameSU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:text="Password"
            android:fontFamily="@font/cairo_light"
            android:textColor="@color/AccentRed"
            android:textSize="16sp"
            android:textStyle="bold" />


            <EditText
                android:layout_below="@id/password_text"
                android:id="@+id/insertPasswordSU"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Password"

                android:inputType="textPassword"
                android:layout_marginTop="-15dp"
                android:fontFamily="@font/open_sans"
                app:layout_constraintVertical_bias="0.6"
                tools:layout_editor_absoluteX="16dp" />


            <Button
                android:layout_below="@id/insertPasswordSU"
                android:id="@+id/signUpButton"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_extralight"
                android:background="@drawable/rounded_button"
                android:clickable="true"
                android:focusable="true"
                android:textAllCaps="false"
                android:text="Sign Up"
                android:elevation="5dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/TextWhite"
                android:textSize="18sp"/>

            <TextView
                android:layout_below="@id/signUpButton"
                android:id="@+id/loginButtonInSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_extralight"
                android:text="Login"
                android:textColor="@color/fui_bgGitHub"
                android:textSize="22sp"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:focusable="true"
                />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/log_back2"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>